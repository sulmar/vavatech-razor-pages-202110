@page
@model WebApp.Pages.Products.IndexModel
@{
}



<form method="get">

    <div>
        <div class="form-row">

            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.SearchCriteria.Color">Kolor</label>
                <input type="text" asp-for="@Model.SearchCriteria.Color" class="form-control" />
                <span asp-validation-for="@Model.SearchCriteria.Color" class="text-danger"></span>
            </div>

        </div>

        <div class="form-row">

            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.SearchCriteria.UnitPriceFrom">Od kwoty</label>
                <input type="text" asp-for="@Model.SearchCriteria.UnitPriceFrom" class="form-control" />
                <span asp-validation-for="@Model.SearchCriteria.UnitPriceFrom" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.SearchCriteria.UnitPriceTo">Do kwoty</label>
                <input type="text" asp-for="@Model.SearchCriteria.UnitPriceTo" class="form-control" />
                <span asp-validation-for="@Model.SearchCriteria.UnitPriceTo" class="text-danger"></span>
            </div>

        </div>

       

        <button type="submit" class="btn btn-success btn-block">Szukaj</button>
    </div>

</form>

<table class="table table-hover table-striped table-dark">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kolor</th>
            <th>Rozmiar</th>
            <td>Cena</td>
            <td>Tagi</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Color</td>
                <td>@product.Size</td>
                <td>@product.UnitPrice</td>
                <td>
                    <ul class="horizontal">
                        @foreach (var tag in product.Tags)
                        {
                            <li>@tag.Name</li>
                        }
                    </ul>

                </td>
                <td>
                    <div>
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@product.Id">Edycja</a>
                    </div>
                </td>
            </tr>

        }


    </tbody>
</table>