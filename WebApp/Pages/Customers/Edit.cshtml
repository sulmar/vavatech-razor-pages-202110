@page
@model WebApp.Pages.Customers.EditModel
@{
}

<div>

    <form method="post">

        <input type="hidden" asp-for="@Model.Customer.Id" />
        <input type="hidden" asp-for="@Model.Customer.Gender" />
        <input type="hidden" asp-for="@Model.Customer.IsRemoved" />

        <div class="form-row">

            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.Customer.FirstName">Imię</label>
                <input type="text" asp-for="@Model.Customer.FirstName" class="form-control" />
            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.Customer.LastName">Nazwisko</label>
                <input type="text" asp-for="@Model.Customer.LastName" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6 col-sm-12">
                <label asp-for="@Model.Customer.Salary">Salary</label>
                <input type="text" asp-for="@Model.Customer.Salary" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-success btn-block">Zapisz</button>
    </form>

</div>